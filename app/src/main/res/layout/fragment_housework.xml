<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintHeight_percent="0.48"
        android:layout_height="0dp"
        android:background="@drawable/background_bottom_radius_box"
        android:elevation="7dp"
        android:id="@+id/calendar_layout"
        android:gravity="center_horizontal">
        <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/calendar"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_layout"
        android:background="@color/black"
        android:id="@+id/black_line"/>
    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/background_circle"
        android:backgroundTint="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/black_line"
        app:layout_constraintRight_toRightOf="@id/black_line"
        app:layout_constraintTop_toBottomOf="@id/calendar_layout"
        android:layout_marginTop="23dp"/>
    <TextView
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022.05.27"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:id="@+id/txt_today_date"
        app:layout_constraintTop_toBottomOf="@id/calendar_layout"
        app:layout_constraintLeft_toRightOf="@id/black_line" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/txt_today_date"
        app:layout_constraintTop_toTopOf="@id/txt_today_date"
        app:layout_constraintBottom_toBottomOf="@id/txt_today_date"
        android:text="+"
        android:textColor="@color/black"
        android:background="@drawable/background_circle_stroke"
        android:id="@+id/btn_add_housework"
        android:layout_marginLeft="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toBottomOf="@id/txt_today_date"
        app:layout_constraintLeft_toRightOf="@id/black_line"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottom_appbar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:id="@+id/recycler_housework"
        app:layout_constrainedHeight="true"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_appbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

</androidx.constraintlayout.widget.ConstraintLayout>