<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_profile"
        android:background="@drawable/image_circle"
        android:backgroundTint="@color/deep_deep_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_nickname"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        app:layout_constraintTop_toBottomOf="@+id/img_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14sp"
        android:textColor="@color/deep_deep_gray"/>

    <ImageView
        android:id="@+id/img_selected_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/image_circle"
        android:backgroundTint="#66C4C4C4"
        app:layout_constraintTop_toTopOf="@id/img_profile"
        app:layout_constraintLeft_toLeftOf="@id/img_profile"
        app:layout_constraintRight_toRightOf="@id/img_profile"
        app:layout_constraintBottom_toBottomOf="@id/img_profile"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/icon_selected"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_selected_item_white"
        app:layout_constraintTop_toTopOf="@id/img_profile"
        app:layout_constraintLeft_toLeftOf="@id/img_profile"
        app:layout_constraintRight_toRightOf="@id/img_profile"
        app:layout_constraintBottom_toBottomOf="@id/img_profile"
        android:visibility="invisible"/>




