<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="SmallSp"
    tools:context=".view.login.SelectRegisterTypeActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <TextView
        android:id="@+id/txt_welcome_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환영합니다"
        android:textSize="14sp"
        android:textColor="@color/main"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/guideline_top"
        app:layout_constraintLeft_toRightOf="@+id/guideline_left"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_join_group"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/background_circle"
        android:backgroundTint="@color/main"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome_ment"
        app:layout_constraintLeft_toRightOf="@id/guideline_left"
        app:layout_constraintRight_toLeftOf="@id/btn_create_group"
        android:layout_marginTop="120dp"
        android:textSize="35sp"
        android:text="&lt;/&gt;"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_join_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="냉장고 코드 입력"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/btn_join_group"
        app:layout_constraintLeft_toLeftOf="@id/btn_join_group"
        app:layout_constraintRight_toRightOf="@id/btn_join_group"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"/>
    <TextView
        android:id="@+id/txt_join_group_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 가족의\n코드를 입력해요"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/txt_join_group"
        app:layout_constraintLeft_toLeftOf="@id/txt_join_group"
        app:layout_constraintRight_toRightOf="@id/txt_join_group" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_group"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/background_circle"
        android:backgroundTint="@color/second"
        app:layout_constraintRight_toLeftOf="@id/guideline_right"
        app:layout_constraintTop_toTopOf="@id/btn_join_group"
        app:layout_constraintLeft_toRightOf="@id/btn_join_group"
        android:textSize="42sp"
        android:text="+"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_create_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="냉장고 그룹 생성"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/btn_create_group"
        app:layout_constraintLeft_toLeftOf="@id/btn_create_group"
        app:layout_constraintRight_toRightOf="@id/btn_create_group"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"/>
    <TextView
        android:id="@+id/txt_create_group_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 가족의\n코드를 입력해요"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/txt_create_group"
        app:layout_constraintLeft_toLeftOf="@id/txt_create_group"
        app:layout_constraintRight_toRightOf="@id/txt_create_group" />


</androidx.constraintlayout.widget.ConstraintLayout>