<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_radius_gray_stroke"
    android:elevation="7dp"
    android:layout_margin="7dp">
    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/sample_image"
        android:id="@+id/image_ingredient_search"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="냉장/야채"
        android:textColor="@color/main"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@+id/image_ingredient_search"
        app:layout_constraintTop_toTopOf="@id/image_ingredient_search"
        android:id="@+id/txt_ingredient_search"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팽이버섯"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        app:layout_constraintLeft_toRightOf="@+id/image_ingredient_search"
        app:layout_constraintTop_toBottomOf="@+id/txt_ingredient_search"
        android:id="@+id/txt_ingredient_name_search"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D-14"
        android:textColor="@color/deep_deep_gray"
        android:id="@+id/txt_ingredient_expiry_date_search"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_ingredient_name_search"
        app:layout_constraintLeft_toRightOf="@id/image_ingredient_search"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp" />
    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/background_circle"
        android:backgroundTint="@color/status_green"
        android:id="@+id/image_ingredient_status_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>