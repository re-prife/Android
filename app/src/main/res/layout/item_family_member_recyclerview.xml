<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="13dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/white_radius_16dp_background"
    android:elevation="7dp">
    <ImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:id="@+id/image_family_member"
        android:layout_marginLeft="8dp"
        android:src="@drawable/sample_image"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/image_family_member"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_family_member_nickname"
            android:text="아빠"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_family_member_name"
            android:textColor="@color/deep_deep_gray"
            android:text="김아빠"
            android:textSize="11sp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/txt_family_member_nickname"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>