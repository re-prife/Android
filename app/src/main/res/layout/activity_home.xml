<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/main_color_bottom_radius_18dp_background">
        <RelativeLayout
            android:background="@drawable/white_radius_5dp_background"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_main_notice"
                android:id="@+id/notice_img"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/main_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/notice_img"
                android:text="엄마의 잔소리"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/write_notice"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_main_notice_change" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_weight="4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:id="@+id/button_refrigerator"
                    android:padding="20dp"
                    android:background="@drawable/white_radius_20dp_background"
                    android:elevation="7dp"
                    android:layout_margin="7dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="냉장고"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_move_prev"
                        android:rotationY="180" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:id="@+id/button_housework"
                    android:padding="20dp"
                    android:background="@drawable/white_radius_20dp_background"
                    android:elevation="7dp"
                    android:layout_margin="7dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="집안일"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_move_prev"
                        android:rotationY="180" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/button_errand"
                android:padding="15dp"
                android:background="@drawable/white_radius_20dp_background"
                android:elevation="7dp"
                android:layout_margin="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="심부름"
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_move_prev"
                    android:rotationY="180" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/button_make_errand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_radius_20dp_background"
                    android:elevation="7dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="심부름 시키기"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_move_prev"
                        android:rotationY="180" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_radius_20dp_background"
                    android:elevation="7dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마이페이지"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_move_prev"
                        android:rotationY="180" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이달의 왕"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_radius_16dp_background"
                    android:layout_margin="4dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="23dp" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.75" />

                    <ImageView
                        android:src="@drawable/icon_profile"
                        android:layout_marginTop="12dp"
                        android:id="@+id/image_king_1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:clipToOutline="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                        app:layout_constraintRight_toRightOf="@id/guideline_right"/>
                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:id="@+id/txt_king_name_1"
                        app:layout_constraintTop_toBottomOf="@id/image_king_1"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                        app:layout_constraintRight_toRightOf="@id/guideline_right"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2회"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textColor="@color/deep_deep_gray"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_king_name_1"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                        app:layout_constraintRight_toRightOf="@id/guideline_right"
                        android:id="@+id/txt_king_housework_1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="설거지를 하고,\n왕이 되세요!"
                        android:gravity="center"
                        android:textColor="@color/deep_deep_gray"
                        android:textSize="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_king_name_1"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                        app:layout_constraintRight_toRightOf="@id/guideline_right"
                        android:id="@+id/txt_king_none_1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_radius_16dp_background"
                    android:layout_margin="4dp">
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_left_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_right_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.75" />

                    <ImageView
                        android:src="@drawable/icon_profile"
                        android:layout_marginTop="12dp"
                        android:id="@+id/image_king_2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:clipToOutline="true"
                        android:background="@drawable/image_circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_2"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_2"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:id="@+id/txt_king_name_2"
                        app:layout_constraintTop_toBottomOf="@id/image_king_2"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_2"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1회"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textColor="@color/deep_deep_gray"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_king_name_2"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_2"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_2"
                        android:id="@+id/txt_king_housework_2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="요리를 하고,\n왕이 되세요!"
                        android:gravity="center"
                        android:textColor="@color/deep_deep_gray"
                        android:textSize="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_king_name_2"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_2"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_2"
                        android:id="@+id/txt_king_none_2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_radius_16dp_background"
                    android:layout_margin="4dp">
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_left_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_right_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.75" />

                    <ImageView
                        android:src="@drawable/icon_profile"
                        android:layout_marginTop="12dp"
                        android:id="@+id/image_king_3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:clipToOutline="true"
                        android:background="@drawable/image_circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_3"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_3"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="11sp"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:id="@+id/txt_king_name_3"
                        app:layout_constraintTop_toBottomOf="@id/image_king_3"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_3"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_3" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6회"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textColor="@color/deep_deep_gray"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_king_name_3"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_3"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_3"
                        android:id="@+id/txt_king_housework_3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장을 보고,\n왕이 되세요!"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/deep_deep_gray"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@id/image_king_3"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_3"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_3"
                        android:id="@+id/txt_king_none_3"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_radius_16dp_background"
                    android:layout_margin="4dp">
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_left_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25" />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_right_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.75" />

                    <ImageView
                        android:src="@drawable/icon_profile"
                        android:background="@drawable/image_circle"
                        android:layout_marginTop="12dp"
                        android:id="@+id/image_king_4"
                        android:layout_width="45dp"
                        android:clipToOutline="true"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_4"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_4"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:id="@+id/txt_king_name_4"
                        app:layout_constraintTop_toBottomOf="@id/image_king_4"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_4"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_4" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="4회"
                        android:textColor="@color/deep_deep_gray"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_king_name_4"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_4"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_4"
                        android:id="@+id/txt_king_housework_4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="심부름을 하고,\n왕이 되세요!"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/deep_deep_gray"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@id/image_king_4"
                        app:layout_constraintLeft_toLeftOf="@id/guideline_left_4"
                        app:layout_constraintRight_toRightOf="@id/guideline_right_4"
                        android:id="@+id/txt_king_none_4"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>