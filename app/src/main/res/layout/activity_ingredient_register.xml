<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_image_ingredient"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <ImageView
                    android:id="@+id/image_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/deep_gray"/>

                <ImageView
                    android:id="@+id/icon_camera"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_camera"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="80dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_name_info"
                app:layout_constraintTop_toBottomOf="@+id/linear_image_ingredient"
                app:layout_constraintLeft_toLeftOf="@id/edit_name"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/edit_name"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:background="@drawable/background_edit_text_ingredient"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/txt_name_info"/>

            <TextView
                android:id="@+id/txt_amount_info"
                app:layout_constraintTop_toBottomOf="@+id/edit_name"
                app:layout_constraintLeft_toLeftOf="@id/edit_amount"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="양"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/edit_amount"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:background="@drawable/background_edit_text_ingredient"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/txt_amount_info"/>

            <TextView
                android:id="@+id/txt_day_info"
                app:layout_constraintTop_toBottomOf="@+id/edit_amount"
                app:layout_constraintLeft_toLeftOf="@id/layout_linear_days"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구매일자 / 유통기한"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <LinearLayout
                android:id="@+id/layout_linear_days"
                app:layout_constraintTop_toBottomOf="@+id/txt_day_info"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <EditText
                    android:id="@+id/edit_bought_day"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/background_edit_text_ingredient_left"
                    android:inputType="date"
                    android:hint="yyyy-mm-dd"/>
                <EditText
                    android:id="@+id/edit_end_day"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/background_edit_text_ingredient_right"
                    android:inputType="date"
                    android:hint="yyyy-mm-dd"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_category_info"
                app:layout_constraintTop_toBottomOf="@+id/layout_linear_days"
                app:layout_constraintLeft_toLeftOf="@id/spinner_category"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:background="@drawable/background_edit_text_ingredient"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/txt_category_info"/>

            <TextView
                android:id="@+id/txt_keep_type_info"
                app:layout_constraintTop_toBottomOf="@+id/spinner_category"
                app:layout_constraintLeft_toLeftOf="@id/spinner_keep_type"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보관방법"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <Spinner
                android:id="@+id/spinner_keep_type"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:background="@drawable/background_edit_text_ingredient"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/txt_keep_type_info"/>

            <TextView
                android:id="@+id/txt_memo_info"
                app:layout_constraintTop_toBottomOf="@+id/spinner_keep_type"
                app:layout_constraintLeft_toLeftOf="@id/edit_memo"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메모"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/edit_memo"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:maxLines="3"
                android:maxWidth="310dp"
                android:inputType="text|textMultiLine"
                android:imeOptions="actionDone"
                android:background="@drawable/background_edit_text_ingredient"
                app:layout_constraintRight_toRightOf="@id/guideline_right"
                app:layout_constraintLeft_toLeftOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/txt_memo_info"
                android:layout_marginBottom="80dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <View
        app:layout_constraintBottom_toTopOf="@+id/layout_linear_btn"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main"/>
    <LinearLayout
        android:id="@+id/layout_linear_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <RelativeLayout
            android:id="@+id/btn_save_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/main">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="저장"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_cancel_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="취소"
                android:textColor="@color/main"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

