<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.login.InputGroupCodeActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <TextView
        android:id="@+id/txt_input_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="냉장고 코드 입력"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        app:layout_constraintLeft_toLeftOf="@id/edittxt_input_code"/>

    <TextView
        android:id="@+id/txt_input_code_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 가족 코드를 입력하세요"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/txt_input_code"
        app:layout_constraintLeft_toLeftOf="@id/txt_input_code"/>

    <EditText
        android:id="@+id/edittxt_input_code"
        android:inputType="textPersonName"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/background_edit_text"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/txt_input_code_info"
        android:layout_marginTop="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_join_group"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:text="참여하기"
        android:background="@drawable/background_config_button"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/edittxt_input_code"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>